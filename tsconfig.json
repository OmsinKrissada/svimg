    "compilerOptions": {
        "declaration": true,
        "declarationDir": "./dist",
        "module": "es6",
        "noImplicitAny": true,
        "outDir": "./dist",
        "target": "es5",
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "moduleResolution": "node"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}